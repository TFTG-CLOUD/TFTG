.page.page-center
  .container.container-tight.py-4
    .text-center.mb-4
      a.navbar-brand.navbar-brand-autodark(href='.')
        img.navbar-brand-image(src='./static/logo.svg' width='110' height='32' alt='Tabler')
    .card.card-md
      .card-body
        h2.h2.text-center.mb-4 Login to your account
        if message && message.length
          p.text-center.text-danger #{message}
        form(action='/login' method='POST' autocomplete='off' novalidate='')
          .mb-3
            label.form-label Email address
            input.form-control(type='email' name='email' placeholder='your@email.com' autocomplete='off')
          .mb-2
            label.form-label
              | Password
            .input-group.input-group-flat
              input.form-control(type='password' name='password' placeholder='Your password' autocomplete='off')
              span.input-group-text
                a.link-secondary(href='#' title='Show password' data-bs-toggle='tooltip')
                  // Download SVG icon from http://tabler-icons.io/i/eye
                  svg.icon(xmlns='http://www.w3.org/2000/svg' width='24' height='24' viewbox='0 0 24 24' stroke-width='2' stroke='currentColor' fill='none' stroke-linecap='round' stroke-linejoin='round')
                    path(stroke='none' d='M0 0h24v24H0z' fill='none')
                    path(d='M10 12a2 2 0 1 0 4 0a2 2 0 0 0 -4 0')
                    path(d='M21 12c-2.4 4 -5.4 6 -9 6c-3.6 0 -6.6 -2 -9 -6c2.4 -4 5.4 -6 9 -6c3.6 0 6.6 2 9 6')
          .form-footer
            button.btn.btn-primary.w-100(type='submit') Sign in
